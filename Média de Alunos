#include <stdio.h>

int main()
{
    float n1, n2, media;
    int p1, p2;
    
 //adicionando notas e seus pesos
    printf("\n Entrada de Dados \n");
    printf ("Nota 1:  "); scanf ("%f", &n1);
    printf ("Nota 2:  "); scanf ("%f", &n2);
    printf ("Peso 1:  "); scanf ("%d", &p1);
    printf ("Peso 2:  "); scanf ("%d", &p2);

media = (n1*p1) + (n2*p2)/ (p1+p2);

//caso a media seja maior que 6
if (media >= 6 )
printf ("\n ALUNO REPROVADO ");
else
printf ("\n ALUNO APROVADO");

    return 0;
}
